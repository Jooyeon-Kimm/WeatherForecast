<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/_20sdp">

        <!--요일/날짜-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dateDayofWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:textSize="@dimen/_12sdp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/dateNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.7"
                android:textColor="#5D5656"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>



        <!--[오전] 강수확률-->
        <TextView
            android:id="@+id/rainAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0%"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000"/>



        <!--[오후] 강수확률-->
        <TextView
            android:id="@+id/rainPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30%"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000"/>

        <!-- 최저 -->
        <TextView
            android:id="@+id/temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-3°"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/recyclerViewItem_blue"/>

        <!-- 최고 -->
        <TextView
            android:id="@+id/temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4°"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/recyclerViewItem_red"/>

    </LinearLayout>

    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#aaa"/>

</LinearLayout>